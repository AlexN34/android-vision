<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Currency settings">
        <ListPreference
            android:title="Start Currency"
            android:summary="%s"
            android:key="start_currency"
            android:entries="@array/currencies"
            android:entryValues="@array/currencies"
            />

        <ListPreference
            android:title="End Currency"
            android:summary="%s"
            android:key="end_currency"
            android:entries="@array/currencies"
            android:entryValues="@array/currencies" />

        <Preference
            android:title="Conversion Rate"
            android:summary="The conversion rate of your Start Currency : End Currency is shown here"
            android:key="conversion_rate"
            />
    </PreferenceCategory>

</PreferenceScreen>